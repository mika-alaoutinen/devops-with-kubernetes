{
  "compilerOptions": {
    "esModuleInterop": true,
    "module": "commonjs",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,       
    "outDir": "dist",
    "sourceMap": true,
    "strict": true,
    "target": "ES6",
  },
  "include": [
    "src/**/*"
  ]
}